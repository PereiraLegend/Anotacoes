<title>Login de Funcion치rios</title>
	<script>
	function Login() {
		var username = document.getElementById("#{username.clientId}").value;
        var password = document.getElementById("#{password.clientId}").value;
        
        var formData = {
            username: username,
            password: password
            };
        var xhr = new XMLHttpRequest();
        xhr.open('POST', 'http://localhost:8080/funcionario', true);
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.onload = function() {
            if (xhr.status === 201) {
                alert('Cadastro corporativo efetuado com sucesso!');
                window.location.href = 'Dashboard.xhtml';
            } else {
                alert('Erro ao cadastrar, nome de usu치rio j치 em uso. Por favor, tente novamente!');
            }
        };
        xhr.send(JSON.stringify(formData));
        
          let key = "Authorization";
          let token = response.headers.get(key);
          window.localStorage.setItem(key, token);
        
          if (response.ok) {
            showToast("#okToast");
          } else {
            showToast("#errorToast");
          }
        
          window.setTimeout(function () {
            window.location = "/Dashboard.xhtml";
          }, 2000);
        }
        
        function showToast(id) {
          var toastElList = [].slice.call(document.querySelectorAll(id));
          var toastList = toastElList.map(function (toastEl) {
            return new bootstrap.Toast(toastEl);
          });
          toastList.forEach((toast) => toast.show());
        }
	} 
	</script>
