<h:form>
	<h1>Login de Funcion치rios</h1>
	<h:panelGrid>
        Nome<h:inputText id="username" binding="#{username}"/>
        Senha<h:inputSecret id="password" binding="#{password}"/>
		<h:commandButton value="login" onClick="Login();"/>
	</h:panelGrid>
</h:form>

