<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://xmlns.jcp.org/jsf/html" xmlns:f="http://xmlns.jcp.org/jsf/core">
<h:head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Cadastro de Profissionais</title>
    <script>
        function cadastrar() {
            var username = document.getElementById("#{username.clientId}").value;
            var tipocadastro = document.getElementById("#{tipocadastro.clientId}").value;
            var password = document.getElementById("#{password.clientId}").value;
            var cpf = document.getElementById("#{cpf.clientId}").value;
            var email = document.getElementById("#{email.clientId}").value;
            var datanascimento = document.getElementById("#{datanascimento.clientId}").value;
            var telefone = document.getElementById("#{telefone.clientId}").value;
            var titulo = document.getElementById("#{titulo.clientId}").value;

            var formData = {
                username: username,
                tipocadastro: tipocadastro,
                password: password,
                cpf: cpf,
                email: email,
                datanascimento: datanascimento,
                telefone: telefone,
                titulo: titulo,
                status: "INATIVO",
                codigounico: ""
            };

            var xhr = new XMLHttpRequest();
            xhr.open('POST', 'http://localhost:8080/user', true);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onload = function() {
                if (xhr.status === 200) {
                    alert('Cadastro efetuado com sucesso!');
                    window.location.href = 'index.xhtml';
                } else {
                    alert('Erro ao cadastrar. Por favor, tente novamente.');
                }
            };
            xhr.send(JSON.stringify(formData));
        }
    </script>
</h:head>
<h:body>

    <h:form id="form">
        <h1>Cadastro de Profissionais</h1>
        <h:panelGrid>
            Tipo de Cadastro
            <h:selectOneMenu id="tipocadastro" binding="#{tipocadastro}">
                <f:selectItem itemLabel="VISTO" itemValue="VISTO" />
                <f:selectItem itemLabel="REGISTRO" itemValue="REGISTRO" />
            </h:selectOneMenu>
            Nome <h:inputText id="username" binding="#{username}" />
            CPF <h:inputText id="cpf" binding="#{cpf}" />
            E-mail <h:inputText id="email" binding="#{email}" />
            Senha <h:inputSecret id="password" binding="#{password}" style="width: 157px;" />
            Data de Nascimento <h:inputText id="datanascimento" binding="#{datanascimento}" />
            Telefone <h:inputText id="telefone" binding="#{telefone}" />
            TÃ­tulos <h:inputTextarea id="titulo" binding="#{titulo}" rows="5" cols="50" />
            <h:commandButton type="button" value="Cadastrar" style="width: 158px;" onclick="cadastrar();" />
        </h:panelGrid>
    </h:form>

</h:body>
</html>
