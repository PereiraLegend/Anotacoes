	<h:form id="form">
	    <h1>Cadastro de Funcion치rios</h1>
	    <h:panelGrid>
	        Nome<h:inputText id="username"/>
	        Senha<h:inputSecret id="password"/>
	        <h:commandButton value="Cadastrar" onclick="cadastrarF();" style="width: 158px;"/>
	    </h:panelGrid>
	</h:form>
	<script>
		function cadastrarF(){
		    var username = document.getElementById("username").value;
		    var password = document.getElementById("password").value;
		            
		    var formData = {
		        username: username,
		        password: password
		    };
		            
		    var xhr = new XMLHttpRequest();
		    xhr.open('POST', 'http://localhost:8080/funcionario', true);
		    xhr.setRequestHeader('Content-Type', 'application/json');
		    xhr.onload = function() {
		        if (xhr.status === 201 || xhr.status === 200) {
		            alert('Cadastro corporativo efetuado com sucesso!');
		            window.location.href = 'LoginFuncionario.xhtml';
		        } if(xhr.status === 403) {
		            alert('Erro ao cadastrar, nome de usu치rio j치 em uso. Por favor, tente novamente!');
		        } else {
				    alert('Error');
				}
		    };
		    xhr.send(JSON.stringify(formData));
		}
	</script>
</h:body>
